<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="hostname_text"
        android:title="@string/pref_title_hostname"
        android:defaultValue="@string/pref_default_hostname"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        android:summary="Adres IP lub domena do logowanie po przez ssh"/>
    <EditTextPreference
        android:key="login_text"
        android:title="@string/pref_title_login"
        android:defaultValue="@string/pref_default_login"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        android:summary="Użytkownik do logowanie po przez ssh"/>
    <EditTextPreference
        android:key="password_text"
        android:title="@string/pref_title_password"
        android:defaultValue="@string/pref_default_password"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        android:summary="Hasło do logowanie po przez ssh"/>


</PreferenceScreen>
